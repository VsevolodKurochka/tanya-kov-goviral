+b.modal#modal-form
	+e.box._default
		+e.header
			+e.P.title Consult for free
			+e.BUTTON.close(data-close="modal") &times;
		+e.body
			+b.FORM.form._block(action="#" method="POST")
				+e.content
					+e.row
						+e.INPUT.control(name="vname" type="text")
						+e.label Name
					+e.row
						+e.INPUT.control(name="vemail" type="email")
						+e.label Email
					+e.row
						+e.INPUT.control(name="vphone" type="tel")
						+e.label Phone
					+e.row
						+e.BUTTON.submit.btn._brand-1._shadow-brand-1._size-fluid.effect._bounce-top(type="submit") Consult for free

