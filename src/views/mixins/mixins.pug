mixin css(src)
	link(href=src rel="stylesheet")
mixin js(src)
	script(src=src)

mixin add-meta(title, description, url, image)
	if title
		title=title
		meta(name="application-name" content=title)
		meta(property="og:title" content=title)
		meta(itemprop="headline" content=title)
		meta(property="og:site_name" content=title)
	if description
		meta(itemprop="description" content=description)
		meta(property="og:description" content=description)
	if url
		meta(property="og:url" content=url)
		meta(property="og:type" content="website")
	if image
		meta(property="og:image" content=image)
		meta(itemprop="image" content=image)

mixin menu-item(isLink,href, name)

	- var menuItemClass = '';
	if wordpress
		- menuItemClass = 'menu-item';
	else
		- menuItemClass = themePrefix + themeNav + '__menu-item'; 

	li(class=menuItemClass)
		if isLink === 'true'
			a( href=href )=name
		else
			block

mixin hamburger(type)
	if type == '1'
		+b.BUTTON.hamburger._effect-1(data-action="modal" data-open="#modal-nav")
			+e.SPAN.lines
				span Line1
				span Line2
				span Line3
	else if type == '2'
		+b.BUTTON.hamburger._effect-2(data-action="modal" data-open="#modal-nav")
			+e.SPAN.lines
				span
				span
				span
				span

mixin icon(classname, img, title)
	+b.icon(class=classname)&attributes(attributes)
		+e.inner
			+e.header
				+e.image(src=img)
				if title
					+e.P.title=title
			+e.body
				block

